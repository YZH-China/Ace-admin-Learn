extends ../layout

block content
	body.login-layout.blur-login
		div.main-container
			div.main-content
				div.row
					div.col-sm-10.col-sm-offset-1
						div.login-container
							div.center
								h1
									i.ace-icon.fa.fa-leaf.green
									span.red(style={margin:'0 10px'}) Ace
									span.white#id-text2 Application
								h4.blue#id-company-text @ Company Name
							div.space-6
							div.position-relative
								div.login-box.visible.widget-box.no-border#login-box
									div.widget-body
										div.widget-main
											h4.header.blue.lighter.bigger
												i.ace-icon.fa.fa-coffee.green
												| Please Enter Your Infomation
											div.space-6
											form
												div.form-group
													label.block.clearfix
														span.block.input-icon.input-icon-right
															input(type="text",placeholder="Username").form-control#username-login
															i.ace-icon.fa.fa-user
												div.form-group
													label.block.clearfix
														span.block.input-icon.input-icon-right
															input(type="password",placeholder="Passoword").form-control#password-login
															i.ace-icon.fa.fa-lock
												div.space
												div.form-group
													div.clearfix
														label.inline
															input(type="checkbox").ace
															span.lbl Remember Me
														button(type="button").width-35.pull-right.btn.btn-primary.btn-sm#btn-login
															i.ace-icon.fa.fa-key
															span.bigger-110 Login
											div.social-or-login.center
												span.bigger-110 Or Login Using
											div.space-6
											div.social-login.center
												a.btn.btn-primary#facebook
													i.ace-icon.fa.fa-facebook
												a.btn.btn-info
													i.ace-icon.fa.fa-twitter
												a.btn.btn-danger
													i.ace-icon.fa.fa-google-plus
										div.toolbar.clearfix
											div
												a(href="#",data-target="#forgot-box").forgot-password-link
													i.ace-icon.fa.fa-arrow-left
													| &nbsp; I forgot my password
											div
												a(href="#",data-target="#signup-box").user-signup-link
													| I want to register &nbsp;
													i.ace-icon.fa.fa-arrow-right
								div.forgot-box.widget-box.no-border#forgot-box
									div.widget-body
										div.widget-main
											h4.header.red.lighter.bigger
												i.ace-icon.fa.fa-key
												| Password
											div.space-6
											p Enter your email and to receive instructions
											form
												fieldset
													label.block.clearfix
														span.block.input-icon.input-icon-right
															input(type="text",placeholder="Email").form-control
															i.ace-icon.fa.fa-envelope
													div.clearfix
														button(type="button").width-35.pull-right.btn.btn-sm.btn-danger
															i.ace-icon.fa.fa-lightblub-0
															span.bigger-110 Send Me!
										div.toolbar.center
											a(href="#",data-target="#login-box").back-to-login-link
												| Back to login
												i.ace-icon.fa.fa-arrow-right
								div.signup-box.widget-box.no-border#signup-box
									div.widget-body
										div.widget-main
											h4.header.green.lighter.bigger
												i.ace-icon.fa.fa-users.blue
												| New User Registration
											div.space-6
											p Enter your details to begin:
											form
												div.form-group
													label.block.clearfix
														span.block.input-icon.input-icon-right
															input(type="email",placeholder="Email").form-control#u_email
															i.ace-icon.fa.fa-envelope
												div.form-group
													label.block.clearfix
														span.block.input-icon.input-icon-right
															input(type="text",placeholder="Username").form-control#username
															i.ace-icon.fa.fa-user
												div.form-group
													label.block.clearfix
														span.block.input-icon.input-icon-right
															input(type="password",placeholder="Password").form-control#password
															i.ace-icon.fa.fa-lock
												div.form-group
													label.block.clearfix
														span.block.input-icon.input-icon-right
															input(type="password",placeholder="Repeat Password").form-control#re_password
															i.ace-icon.fa.fa-retweet
												div.form-group
													label.block
														input(type="checkbox").ace#reg-agreement
														span.lbl
															| I accept the
															a(href="#") &nbsp; User Agreement
													div.space-24
													div.clearfix
														button(type="button",data-target="#modal-success",data-toggle="modal").width-30.pull-left.btn.btn-sm#reg-reset
															i.ace-icon.fa.fa-refresh
															span.bigger-110 Reset
														button(type="button").width-65.pull-right.btn.btn-sm.btn-success#btn-register
															span.bigger-110 Register
															i.ace-icon.fa.fa-arrow-right
										div.toolbar.center
											a(href="#",data-target="#login-box").back-to-login-link#reg-to-log
												i.ace-icon.fa.fa-arrow-left
												| &nbsp; Back to login
							div.navbar-fixed-top.align-right
								br
								&nbsp;
								a#btn-login-dark(href="#") Dark
								&nbsp;
								span.blue /
								&nbsp;
								a#btn-login-blur(href="#") Blur
								&nbsp;
								span.blue /
								&nbsp;
								a#btn-login-light(href="#") Light
								&nbsp;&nbsp;&nbsp;
				div(style={display:"none"}).row#reg-info
					div.col-sm-10.col-sm-offset-1
						div.login-container
							div.alert.alert-danger
								strong
									i.ace-icon.fa.fa-times
		block modail
			include ../success.jade
	script(src="./javascripts/login/login.js")